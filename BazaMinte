from telebot import types
import telebot
import random
bot=telebot.TeleBot("")
@bot.message_handler(commands=['start'])
def start_message(message):
    bot.send_message(message.chat.id,'Привет')
    bot.send_message(message.chat.id, 'Пропиши "/Info"')
@bot.message_handler(commands=['Info'])
def button_message(message):
    markup=types.ReplyKeyboardMarkup(resize_keyboard=True)
    item1=types.KeyboardButton("Information")
    markup.add(item1)
    bot.send_message(message.chat.id, 'Вся информация по кнопке "Information":', reply_markup=markup)
@bot.message_handler(content_types='text')
def message_reply(message):
    if message.text=="Information":
        bot.send_message(message.chat.id,"Ютеб: https://www.youtube.com/@ItsMinTear ; Стеем: steamcommunity.com/profiles/76561199155817070 ; Твиткч : m.twitch.tv/mintear0k/home ; Тилиграмм : t.me/EtoMinTear")
        bot.send_message(message.chat.id, "Так же я могу подсчитать тебе какие-нибудь задачи или примеры, если напишешь 'math' (Подсчёт примеров) или 'phys' (для решения задач)." )
        markup1 = types.ReplyKeyboardMarkup(resize_keyboard=True)
        item2 = types.KeyboardButton("math")
        item3 = types.KeyboardButton("phys")
        markup1.add(item2)
        markup1.add(item3)
        bot.send_message(message.chat.id, 'Выбирай:', reply_markup=markup1)
ВОТ ОТСЮДА НЕ ЗНАЮ ЧО НЕ РАБОТАЕТ



@bot.message_handler(content_types='text')
def math_message(message):
    if message.text =="math":
        bot.send_message(message.chat.id, "Теперь способ:")
        markup2 = types.ReplyKeyboardMarkup(resize_keyboard=True)
        item6 = types.KeyboardButton("+")
        item5 = types.KeyboardButton("-")
        item7 = types.KeyboardButton("*")
        item4 = types.KeyboardButton("/")
        markup2.add(item4)
        markup2.add(item5)
        markup2.add(item6)
        markup2.add(item7)
        bot.send_message(message.chat.id, 'Выбирай:', reply_markup=markup2)
bot.infinity_polling()
